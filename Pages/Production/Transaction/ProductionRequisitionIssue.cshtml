@page
@{
    Layout = "_Layout";
}



<!DOCTYPE html>


<div id="img_load" style="width:100%;text-align:center;">
    <img src="~/images/working.GIF" />
</div>
<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Production Requisition Issue<small style="color:red"><span id="lbl_ref_time"></span></small></h2>
                <p style="text-align:right;"> <button id="btn_new" class="btn btn-info"> New</button></p>
                <div class="clearfix"></div>
                <div class="clearfix"></div>
                <div class="clearfix"></div>
            </div>
            <div class="container">
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="card-box table-responsive">

                                <!-- start project list -->
                                @*<table id="voucher_cr_table" class="table table-striped table-bordered dataTable
                                    bs-select">
                                *@
                                <table id="Table_View" class="table table-striped table-bordered table-sm">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center;">Action</th>
                                            <th>No</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                                <!-- end project list -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@* Create Modal Start *@

<div id="data_Modal" class="modal fade">
    <div class="modal-dialog modal-lg" style="width:900px !important; margin-top:6%; ">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Production Requisition Issue</h4>
                <div id="img_load_sav" style="width:100%;text-align:center;">
                    <img src="~/images/working.GIF" />
                </div>
            </div>
            <form id="create_form">
                <div class="row">
                    <div class="form-horizontal">

                        <div class="col-md-12" style="text-align:right;">
                            <input id="btn_sav" type="button" value="Save" onclick="savrec();"
                                class="btn btn-success" />
                            <input id="btn_update" type="button" value="Update" onclick="updrec();"
                                class="btn btn-warning" />
                            <input id="btn_cls" type="button" value="Close" onclick="discon()" class="btn btn-danger"
                                data-dismiss="modal" />
                            <label class="control-label col-md-2" style="text-align:left;">
                                ID
                            </label>
                            <div class="col-md-1">
                                <label class="control-label" id="txt_no" style="text-align: left;">
                                </label>
                            </div>
                        </div>
                        <label class="control-label" id="txt_id" style="display: none;">
                        </label>
                        <div class="col-md-12">
                            <div class="form-group">

                                <label class="control-label col-md-2" style="text-align:left;">
                                    Warehouse
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="txt_wh" class="form-control" />
                                </div>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Date
                                </label>
                                <div class="col-md-4">
                                    <div class='input-group date' id='txt_dat'>
                                        <input type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar">
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">

                                <label class="control-label col-md-2" style="text-align:left;">
                                    Requisition
                                </label>
                                <div class="col-md-9">
                                    <input type="text" id="txt_req" class="form-control" />
                                </div>

                                <div class="col-md-1">
                                    <input id="btn_adddetail" type="button" value="Add" onclick="AddRequisition()"
                                        class="btn btn-success" />
                                </div>

                            </div>


                            <div class="form-horizontal">
                                <div class="col-md-12">

                                    <table id="detailsTable" class="table table-striped table-bordered">
                                        <thead style="text-align:center">
                                            <tr>
                                                <th>Action</th>
                                                <th style="display: none;">jobId</th>
                                                <th>Job#</th>
                                                <th style="display: none;">Itemid</th>
                                                <th>ItemName</th>
                                                 <th style="display: none;">warehouseId</th>
                                                <th>Warehouse</th>
                                                <th>P.Requisition</th>
                                                <th>Stock</th>
                                                <th>Issue </th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>


                </div>

                <div class="modal-footer">
                </div>
            </form>
        </div>
    </div>
</div>
@* Create Modal End *@


<script src="~/FunctionJS/Production/Transaction/ProductionRequisitionIssue.js?@Guid.NewGuid().ToString("n")"></script>