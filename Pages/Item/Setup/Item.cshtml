@page
@{
    Layout = "_Layout";
}



<!DOCTYPE html>


<div id="img_load" style="width:100%;text-align:center;">
    <img src="~/images/working.GIF" />
</div>
<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Detail
                    <small style="color:red"><span id="lbl_ref_time"></span></small>
                </h2>
                <p style="text-align:right;"> <button id="btn_new" class="btn btn-info"> New</button></p>
                <div class="clearfix"></div>
            </div>
            <div class="container">
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="card-box table-responsive">

                                <table id="Table_View" class="table table-striped table-bordered table-sm">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center;">Action</th>
                                            <th>Category Classification</th>
                                            <th>Sub-Category</th>
                                            <th>Brand</th>
                                            <th>Name</th>
                                            <th>Active</th>
                                            <th>Type</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                                <!-- end project list -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@* Create Modal Start *@

<div id="data_Modal" class="modal fade">
    <div class="modal-dialog modal-lg" style="width:900px !important; margin-top:6%; ">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>
                    Detail
                </h4>
                <div id="img_load_sav" style="width:100%;text-align:center;">
                    <img src="~/images/working.GIF" />
                </div>
            </div>
            <form id="create_form">
                <div class="row">
                    <div class="form-horizontal">
                        <div class="col-md-12" style="text-align:right;">
                            <input id="btn_sav" type="button" value="Save" onclick="savrec();"
                                class="btn btn-success" />
                            <input id="btn_upd" type="button" value="Update" onclick="updrec()"
                                class="btn btn-warning" />
                            <input id="btn_cls" type="button" value="Close" onclick="discon()" class="btn btn-danger"
                                data-dismiss="modal" />
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    ID

                                    <label class="control-label col-md-0" id="txt_id"
                                        style="text-align:left;visibility:hidden;">
                                    </label>
                                </label>
                                <div class="col-md-1" id="txt_no">
                                </div>
                                <div class="icheck-inline col-md-3">
                                    <label>
                                        <input id="ck_active" type="checkbox" class="icheck"
                                            data-checkbox="icheckbox_square-grey">Active
                                    </label>
                                </div>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Classification
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="txt_itemcategoryclassification" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Brand
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="txt_brand" class="form-control" />
                                </div>

                                <label class="control-label col-md-2" style="text-align:left;">
                                    Sub Category
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="txt_itemsubcategories" class="form-control" />
                                </div>

                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Name
                                </label>
                                <div class="col-md-10">
                                    <input type="text" id="txt_name" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Qty
                                </label>
                                <div class="col-md-1">
                                    <input type="text" id="txt_qty" value="0" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    <input type="text" id="txt_innerscale" class="form-control" />
                                </div>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Master Qty
                                </label>
                                <div class="col-md-1">
                                    <input type="text" id="txt_masterqty" value="0" class="form-control" />
                                </div>
                                <label id="lbl_masterscale" class="control-label col-md-2" style="text-align:right;">
                                    In a
                                </label>
                                <div class="col-md-2">
                                    <input type="text" id="txt_masterscale" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Manufacturer Qty
                                </label>
                                <div class="col-md-1">
                                    <input type="text" id="txt_mqty" value="0" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    <input type="text" id="txt_mqty_scale" class="form-control" />
                                </div>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Min. Qty
                                </label>
                                <div class="col-md-1">
                                    <input type="text" id="txt_minqty" value="0" class="form-control" />
                                </div>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Re-Order Qty
                                </label>
                                <div class="col-md-2">
                                    <input type="text" id="txt_reorderqty" value="0" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Size x
                                </label>

                                <div class="col-md-1">
                                    <select id="select_paperscale" name="select_paperscale">
                                        <option value="inch">Inch</option>
                                        <option value="mm">MM</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <input type="number" id="txt_height" value="0" class="form-control" min="0" />
                                </div>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    y
                                </label>
                                <div class="col-md-2">
                                    <input type="number" id="txt_width" value="0" class="form-control" min="0" />
                                </div>
                                <label class="control-label col-md-1" style="text-align:left;">
                                    GSM
                                </label>
                                <div class="col-md-2">
                                    <input type="number" id="txt_weight" value="0" class="form-control" min="0" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-2">
                                </div>
                                <input id="btn_papercalculation" type="button" value=" Paper Calculation" onclick="PaperCalculation()"
                                    class="btn btn-info" />

                            </div>

                            @* <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                Description
                                </label>
                                <div class="col-md-8">
                                <input type="text" id="txt_description" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                <button type="button" id="btnAddDes" class="btn btn-dark">Add</button>
                                </div>
                                </div> *@
                            @* <div class="form-group">

                                <div class="col-md-12">
                                <table id="DescriptionTable" class="table table-striped table-bordered container">
                                <thead>
                                <tr>
                                <th></th>
                                <th>Description</th>
                                </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                </div>
                                </div> *@
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </form>
        </div>
    </div>
</div>
@* Create Modal End @*@
<script src="~/FunctionJS/Inventory/Setup/Item.js?@Guid.NewGuid().ToString("n")"></script>
