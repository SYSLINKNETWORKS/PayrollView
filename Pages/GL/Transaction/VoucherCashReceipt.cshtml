@page
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<div id="img_load" style="width:100%;text-align:center;">
    <img src="~/images/working.GIF" />
</div>
<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Cash Receipt<small style="color:red"><span id="lbl_ref_time"></span></small></h2>
                <p style="text-align:right;"> <button id="btn_new" class="btn btn-info">New</button></p>
                <div class="clearfix"></div>
            </div>
            <div class="container">
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="card-box table-responsive">

                                <!-- start project list -->
                                <table id="Table_View" class="table table-striped table-bordered table-sm">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center;">Action</th>
                                            <th>ID</th>
                                            <th>Date</th>
                                            <th>Receive from</th>
                                            <th>Narration</th>
                                            <th>Account</th>
                                            <th>Ex.Rate</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                            <th>Type</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                                <!-- end project list -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@* Create Modal Start *@
<div id="create_data_Modal" class="modal fade">
    <div class="modal-dialog modal-lg" style="width:900px !important;  margin-top:6%; ">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Cash Receipt</h4>
                <div id="img_load_sav" style="width:100%;text-align:center;">
                    <img src="~/images/working.GIF" />
                </div>
            </div>
                        <form id="create_form">
                            @*Master*@
                            <div class="form-horizontal">
                                <label class="control-label col-md-0" id="txt_no"
                                    style="text-align:left;visibility:hidden;">
                                </label>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    ID
                                </label>
                                <div class="col-md-3" id="txt_id">
                                </div>
                                @* <div class="col-md-3">
                                    </div> *@
                                <label class="control-label col-md-1" style="text-align:left;">
                                    Date
                                </label>
                                <div class="col-md-3">
                                    <div class='input-group date' id='txt_dat'>
                                        <input type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar">
                                            </span>
                                        </span>
                                    </div>
                                </div>
                                <div style="text-align:right;" class="col-md-3">
                                    <input id="btn_sav" type="button" value="Save" onclick="savrec();"
                                        class="btn btn-success" />
                                    <input id="btn_update" type="button" value="Update" onclick="updrec()"
                                        class="btn btn-success" />
                                    <input id="btn_cls" type="button" value="Close" onclick="discon()"
                                        class="btn btn-danger" data-dismiss="modal" />
                                </div>
                                <div class="form-group">
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2" style="text-align:left;">
                                        CostCenter
                                    </label>
                                    <div class="col-md-3">
                                        <input typeof="text" id="txt_CostCenter" class="form-control" />
                                    </div>

                                    <label class="control-label col-md-1" style="text-align:left;">
                                        Currency
                                    </label>
                                    <div class="col-md-3">
                                        <input type="text" id="txt_Currency" class="form-control" />
                                    </div>

                                    <label class="control-label col-md-1" style="text-align:left;">
                                        Ex Rate
                                    </label>
                                    <div class="col-md-2">
                                        <input type="number" min="1" id="txt_ExchangeRate" class="form-control"
                                            value="1" />
                                    </div>

                                </div>

                                @* <div class="form-group">
                                    <label class="control-label col-md-2" style="text-align:left;">
                                    Date
                                    </label>
                                    <div class="col-md-3">
                                    <div class='input-group date' id='txt_dat'>
                                    <input type='text' class="form-control" />
                                    <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar">
                                    </span>
                                    </span>
                                    </div>
                                    </div>
                                    <label class="control-label col-md-2" style="text-align:left;">
                                    Cost Center
                                    </label>
                                    <div class="col-md-5">
                                    <input typeof="text" id="txt_CostCenter" class="form-control" />
                                    </div>
                                    </div> *@
                                <div class="form-group">
                                    <label class="control-label col-md-2" style="text-align:left;">
                                        Account
                                    </label>
                                    <div class="col-md-10 ">
                                        <input type="text" id="txt_acc_mas" style="width:100%;" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" style="text-align:left;">
                                        Received From
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txt_pto_master" placeholder="Received from"
                                            class="form-control" />
                                    </div>
                                    <label class="control-label col-md-2" style="text-align:left;">
                                        Remarks
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txt_rmk" placeholder="Remarks" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" style="text-align:left;">
                                        Narration
                                    </label>
                                    <div class="col-md-7">
                                        <input type="text" id="txt_nar_mas" placeholder="Narration"
                                            class="form-control" />
                                    </div>
                                    <label class="control-label col-md-1" style="text-align:left;">
                                        Debit
                                    </label>
                                    <label class="control-label col-md-2" id="txt_dr_amt" style="text-align:left;">
                                        0
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-5"></div>
                            <input id="btn_showdetail" type="button" value="Detail" onclick="showDetail();"
                                class="btn btn-info" />

                            <div class="form-horizontal">
                                <table id="detailsTable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width:5%"></th>
                                            <th style="width:25%">Account</th>
                                            <th style="width:25%">Narration</th>
                                            <th style="width:20%">Credit</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                            <div class="modal-footer">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            @* Create Modal End *@

            @* Detail Modal Star *@
            <div class="modal fade" id="data_Modal_Detail" aria-hidden="true">
                <div class="modal-dialog modal-lg" style="width:900px !important; margin-top:6%; ">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4>Details</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-content">
                            <h5 style="margin-top:10px;color:#ff6347;text-align:center;font-weight:900;"><u>Details</u>
                            </h5>
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-md-2" style="text-align:left;">
                                        Account
                                    </label>
                                    <div class="col-md-10 ">
                                        <input type="text" id="txt_acc_det" style="width:100%;" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2" style="text-align:left;">
                                        Narration
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txt_acc_nar" placeholder="Narration"
                                            class="form-control" />
                                    </div>

                                    <label class="control-label col-md-1">
                                        Credit
                                    </label>
                                    <div class="col-md-2">
                                        <input type="number" id="txt_cr_amt" value="0" placeholder="Credit"
                                            class="form-control" />
                                    </div>
                                </div>
                                <div class="modal-footer"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @* Detail Modal End *@

            <script src="~/FunctionJS/GL/Voucher/CashReceipt.js?@Guid.NewGuid().ToString("n")"></script>
