@page
@{
    Layout = "_Layout";
}


<!DOCTYPE html>

@*<h2>Gate Pass In</h2>*@
<div id="img_load" style="width:100%;text-align:center;">
    <img src="~/images/working.GIF" />
</div>

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Roles<small style="color:red"><span id="lbl_ref_time"></span></small></h2>
                <p style="text-align:right;"> <button id="btn_new" class="btn btn-info"> New</button></p>
                <div class="clearfix"></div>
            </div>
            <div class="container">
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="card-box table-responsive">

                                <table id="Table_View" class="table table-striped table-bordered table-sm">
                                    <thead>
                                        <tr>
                                            <th>Actions</th>
                                            <th>Name</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@* Create & Edit model start *@
<div id="data_Modal" class="modal fade">
    <div class="modal-dialog modal-lg" style="width:900px !important;">
        <div class="modal-content">
            <div class="modal-header" style="margin-top:5%;">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Roles</h4>
            </div>
            <form id="create_form">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-horizontal">
                            <div style="text-align:right;">
                                <input id="btn_sav" type="button" value="Save" onclick="savrec();"
                                    class="btn btn-success" />
                                <input id="btn_upd" type="button" value="Update" onclick="updrec();"
                                    class="btn btn-warning" />
                                <input id="btn_cls" type="button" value="Close" onclick="discon();"
                                    class="btn btn-danger" data-dismiss="modal" />
                            </div>
                            <div class="form-group">
                                <div id="txt_id" class="col-md-3" hidden> </div>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Name
                                </label>
                                <div class="col-md-10">
                                    <input type="text" id="txt_name" class="form-control" placeholder="Name" />
                                </div>
                            </div>
                            <div class="modal-footer">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@* Create & Edit model End *@

<script src="~/FunctionJS/Configuration/Setup/Roles.js?@Guid.NewGuid().ToString("n")"></script>