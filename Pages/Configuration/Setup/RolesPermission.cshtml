@page
@{
    Layout = "_Layout";
}



<!DOCTYPE html>


<div id="img_load" style="width:100%;text-align:center;">
    <img src="~/images/working.GIF" />
</div>
<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Roles Permission<small></small></h2>
            </div>
            <div class="container">
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="card-box table-responsive">
                                <div class="form-horizontal">
                                    <div class="col-md-12" style="text-align:right;">
                                        <input id="btn_sav" type="button" value="Save" onclick="savrec()" class="btn btn-success" />
                                        <input id="btn_cls" type="button" value="Close" onclick="" class="btn btn-danger" data-dismiss="modal" />
                                    </div>

                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label id="lbl_modulecount" hidden>
                                            0
                                        </label>

                                        <label class="control-label col-md-2" style="text-align:left;">
                                            Role Name
                                        </label>
                                        <div class="col-md-10">
                                            <input type="text" id="txt_rolename" class="form-control" />
                                        </div>
                                    </div>

                                </div>
                                <div class="clearfix margin-bottom-20">
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label col-md-2" style="text-align:left;">
                                            Role Copy
                                        </label>
                                        <div class="col-md-10">
                                            <input type="text" id="txt_rolename_copy" class="form-control" />
                                        </div>
                                    </div>

                                </div>
                                <div class="clearfix margin-bottom-20">
                                </div>
                                <div class="col-md-12">
                                    <div id="list_module" class="portlet-body"></div>
                                  
                                </div>

                            </div>
                        </div>
                        

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



<script src="~/FunctionJS/Configuration/Setup/RolesPermission.js?@Guid.NewGuid().ToString("n")"></script>