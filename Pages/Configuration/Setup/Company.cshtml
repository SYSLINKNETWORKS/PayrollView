@page
@{
    Layout = "_Layout";
}



<!DOCTYPE html>


<div id="img_load" style="width:100%;text-align:center;">
    <img src="~/images/working.GIF" />
</div>
<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Company<small style="color:red"><span id="lbl_ref_time"></span></small></h2>
                <p style="text-align:right;"> <button id="btn_new" class="btn btn-info"> New</button></p>
                <div class="clearfix"></div>
            </div>
            <div class="container">
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="card-box table-responsive">
                                <!-- start project list -->
                                <table id="Table_View" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width:15%"></th>
                                            <th style="text-align:center">Name</th>
                                            <th style="text-align:center">Short Name</th>

                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                                <!-- end project list -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@* Create Modal Start *@

<div id="data_Modal" class="modal fade">
    <div class="modal-dialog modal-lg" style="width:900px !important; margin-top:6%; ">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Company</h4>
                <div id="img_load_sav" style="width:100%;text-align:center;">
                    <img src="~/images/working.GIF" />
                </div>
            </div>
            <form id="create_form">
                <div class="row">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-2" style="text-align:left;">
                                ID
                            </label>
                            <div class="col-md-2" id="txt_id">
                            </div>
                            <div class="col-md-8" style="text-align:right;">
                                <input id="btn_sav" type="button" value="Save" onclick="savrec()" class="btn btn-success" />
                                <input id="btn_update" type="button" value="Update" onclick="updrec()" class="btn btn-warning" />
                                <input id="btn_cls" type="button" value="Close" onclick="discon()" class="btn btn-danger" data-dismiss="modal" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" style="text-align:left;">
                                Name
                            </label>
                            <div class="col-md-10">
                                <input type="text" id="txt_nam" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" style="text-align:left;">
                                Short Name
                            </label>
                            <div class="col-md-2">
                                <input type="text" id="txt_snm" class="form-control" maxlength="10" />
                            </div>
                            <label class="control-label col-md-2" style="text-align:left;">
                                STN
                            </label>
                            <div class="col-md-2">
                                <input type="text" id="txt_stn" class="form-control" />
                            </div>
                            <label class="control-label col-md-2" style="text-align:right;">
                                NTN
                            </label>
                            <div class="col-md-2">
                                <input type="text" id="txt_ntn" class="form-control" />
                            </div>


                        </div>



                    </div>
                </div>

                <div class="modal-footer">
                </div>
            </form>
        </div>
    </div>
</div>
@* Create Modal End *@


<script src="~/FunctionJS/Configuration/Setup/Company.js?@Guid.NewGuid().ToString("n")"></script>