@page
@{
  Layout = null;
}

<!DOCTYPE html>
<html>

<head>
  <title id=lbl_title></title>
  <link href="~/images/favicon.ico" rel="icon" type="image/ico" />
  <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
  <script src="~/plugins/jquery.min.js" type="text/javascript"></script>
  <script src="~/plugins/jquery-migrate.min.js" type="text/javascript"></script>
  <script src="~/js/moment.min.js" type="text/javascript"></script>
  <script type="text/javascript" src="~/js/Swal.js"></script>

  @using Microsoft.Extensions.Configuration
  @inject IConfiguration Configuration
  <script type="text/javascript">
    var apiUrl = @Json.Serialize(@Configuration.GetSection("UrlAPI")["IFS"]);
    var apiUrl_View = @Json.Serialize(@Configuration.GetSection("UrlAPI")["IFS_View"]);
    var apiUrl_HD = @Json.Serialize(@Configuration.GetSection("UrlAPI")["HD"]);
    var apiUrl_Notification = @Json.Serialize(@Configuration.GetSection("NotificationService")["Host"]);
    var apiUrl_NotificationCompany = @Json.Serialize(@Configuration.GetSection("NotificationService")["Company"]);
  </script>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCtDFEsamLKPvhrJtuCCZ_iFPzWy1kHpCs&callback=onload&libraries=&v=weekly"
    defer></script>
  <style type="text/css">
    /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
    #map {
      height: 100%;
    }

    /* Optional: Makes the sample page fill the window. */
    html,
    body {
      height: 100%;
      margin: 0;
      padding: 0;
    }

    #floating-panel {
      position: absolute;
      top: 10px;
      left: 25%;
      z-index: 5;
      background-color: #fff;
      padding: 5px;
      border: 1px solid #999;
      text-align: center;
      font-family: "Roboto", "sans-serif";
      line-height: 30px;
      padding-left: 10px;
    }

    #floating-panel {
      position: absolute;
      top: 5px;
      left: 50%;
      margin-left: -180px;
      width: 350px;
      z-index: 5;
      background-color: #fff;
      padding: 5px;
      border: 1px solid #999;
    }

    #latlng {
      width: 225px;
    }
  </style>
</head>

<body>
  <div id="map"></div>
</body>

</html>
<script src="~/FunctionJS/Payroll/Report/PayrollMap.js?@Guid.NewGuid().ToString("n")"></script>
