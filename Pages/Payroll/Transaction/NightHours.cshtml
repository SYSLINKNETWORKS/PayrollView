@page
@{
    Layout = "_Layout";
}


<!DOCTYPE html>


<div id="img_load" style="width:100%;text-align:center;">
    <img src="~/images/working.GIF" />
</div>
<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Night Hours<small style="color:red"><span id="lbl_ref_time"></span></small></h2>
                <p style="text-align:right;"> <button id="btn_new" class="btn btn-info"> New</button></p>
                <div class="clearfix"></div>
                <div class="clearfix"></div>
                <div class="clearfix"></div>
            </div>
            <div class="container">
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div class="card-box table-responsive">
                                <!-- start project list -->
                                <!-- @*<table id="voucher_cr_table" class="table table-striped table-bordered dataTable bs-select">
                                *@ -->
                                <table id="Table_View" class="table table-striped table-bordered table-sm">
                                    <thead>
                                         <tr>
                                            <th style="text-align:center;">Action</th>
                                            <th>Machine ID</th>
                                            <th>Employee</th>
                                            <th>Sub-Category</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                                <!-- end project list -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<!-- @* Create Modal Start *@ -->

<div id="data_Modal" class="modal fade">
    <div class="modal-dialog modal-lg" style="width:900px !important; margin-top:6%; ">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Night Hours</h4>
                <div id="img_load_sav" style="width:100%;text-align:center;">
                    <img src="~/images/working.GIF" />
                </div>
            </div>
            <form id="create_form">
                <div class="row">
                    <div class="form-horizontal">
                        <div class="col-md-12" style="text-align:right;">
                            <!-- <button id="btn_new" class="btn btn-info"> New</button> -->
                            <input id="btn_sav" type="button" value="Save" onclick="savrec();" class="btn btn-success" />
                            <input id="btn_upd" type="button" value="Update" onclick="updrec();" class="btn btn-warning" />
                            <input id="btn_cls" type="button" value="Close" onclick="discon()" class="btn btn-danger" data-dismiss="modal" />
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Date
                                </label>
                                <div class="col-md-10">
                                    <div class="input-group date" data-provide="datepicker">
                                        <input type="text" class="form-control">
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Employee
                                </label>
                                <div class="col-md-10">
                                    <input type="text" Placeholder="Enter % to Search Employee .." id="txt_emp" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                 <label class="control-label col-md-2 " style="text-align:left;">
                                    Sub-Category
                                </label>
                                <div class="col-md-10">
                                    <input type="text" id="txt_subcat" class="form-control"  />
                                </div>
                            </div>
                            <div class="form-group">
                                 <table id="Table_View" class="table table-striped table-bordered table-sm">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center;">Action</th>
                                            <th>Machine ID</th>
                                            <th>Employee</th>
                                            <th>Sub-Category</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </form>
        </div>
    </div>
</div>
<!-- @* Create Modal End *@ -->

<script src="~/FunctionJS/Payroll/Transaction/NightHours.js?@Guid.NewGuid().ToString("n")"></script>





