@page
@{
    Layout = "_Layout";
}


<!DOCTYPE html>


<div id="img_load" style="width:100%;text-align:center;">
    <img src="~/images/working.GIF" />
</div>
<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <div class="row">
                    <div class="col-md-3">
                        <h2>Holiday</h2>
                    </div>
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-4">
                        <div class='input-group date' id='txt_Date'>
                            <input type='text' class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar">
                                </span>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <button class="btn btn-light" onclick="Onload();"><i class="fa fa-filter"></i></button>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-primary" onclick="savrec();">Save</button>
                    </div>
                </div>
                <div class="container">
                    <div class="x_content">
                        <div class="row">
                            <div class="col-md-12 col-xs-12">
                                <div class="card-box table-responsive">
                                    <!-- start project list -->
                                    <!-- @*<table id="voucher_cr_table" class="table table-striped table-bordered dataTable bs-select">
                                    *@ -->
                                    <table id="Table_View" class="table table-striped table-bordered table-sm paging">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Day</th>
                                                <th>Holiday/th>
                                                <th>Remarks</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                    <!-- end project list -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <!-- @* Create Modal Start *@ -->

    <div id="data_Modal" class="modal fade">
        <div class="modal-dialog modal-lg" style="width:900px !important; margin-top:6%; ">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Holiday</h4>
                    <div id="img_load_sav" style="width:100%;text-align:center;">
                        <img src="~/images/working.GIF" />
                    </div>
                </div>
                <form id="create_form">
                    <div class="row">
                        <div class="form-horizontal">
                            <div class="col-md-12" style="text-align:right;">
                                <!-- <button id="btn_new" class="btn btn-info"> New</button> -->
                                <input id="btn_sav" type="button" value="Save" onclick="savrec();"
                                    class="btn btn-success" />
                                <input id="btn_upd" type="button" value="Update" onclick="updrec();"
                                    class="btn btn-warning" />
                                <input id="btn_cls" type="button" value="Close" onclick="discon()"
                                    class="btn btn-danger" data-dismiss="modal" />
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-md-2" style="text-align:left;">
                                        Date
                                    </label>
                                    <div class="col-md-8">
                                        <div class="input-group date" data-provide="datepicker">
                                            <input type="text" class="form-control">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-light" id="btn_view">View</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- @* Create Modal End *@ -->

    <script src="~/FunctionJS/Payroll/Transaction/Holiday.js?@Guid.NewGuid().ToString("n")"></script>
