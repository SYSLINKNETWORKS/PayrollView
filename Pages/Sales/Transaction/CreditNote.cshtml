@page
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<div id="img_load" style="width:100%;text-align:center;">
    <img src="~/images/working.GIF" />
</div>
<div class="row">
    <div class="col-md-12 col-xs-12"> 
        <div class="x_panel">
            <div class="x_title">
                <h2>CREDIT NOTE<small style="color:red"><span id="lbl_ref_time"></span></small></h2>
                <p style="text-align:right;">
                    <button id="btn_new" class="btn btn-info"> New</button>
                </p>
                <div class="clearfix"></div>
            </div>
            <div class="container">
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <div>
                                <div class="card-box table-responsive">
                                    <!-- start project list -->
                                    <table id="Table_View" class="table table-striped table-bordered table-sm">
                                        <thead>
                                            <tr>
                                                <th style="text-align:center;">Action</th>
                                                <th>NO</th>
                                                <th>Date</th>
                                                <th>Inovice#</th>
                                                <th>Customer</th>
                                                <th>Item</th>
                                                <th>Amount</th>
                                                <th>Remarks</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                    <!-- end project list -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@* Create Modal Start *@
<div id="data_Modal" class="modal fade">
    <div class="modal-dialog modal-lg" style="width:900px !important; margin-top:6%;">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4>Credit Note</h4>
                <div id="img_load_sav" style="width:100%;text-align:center;">
                    <img src="~/images/working.GIF" />
                </div>
            </div>
            <form id="create_form">
                <div class="modal-body">
                    <div class="form-horizontal">

                        <div class="form-group">

                            <div class="col-md-12" style="text-align:right;">
                                <input id="btn_sav" type="button" value="Save" onclick="savrec()"
                                    class="btn btn-success" />
                                <input id="btn_update" type="button" value="Update" onclick="updrec()"
                                    class="btn btn-warning" />
                                <input id="btn_cls" type="button" value="Close" onclick="discon()"
                                    class="btn btn-danger" data-dismiss="modal" />
                            </div>

                            <div class="form-group"></div>

                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    ID
                                </label>
                                <div class="col-md-4">
                                    <label type="text" id="txt_id" style="display: none;"></label>
                                    <label type="text" id="txt_no"></label>
                                </div>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Date
                                </label>
                                <div class="col-md-4">
                                    <div class='input-group date' id='txt_dat'>
                                        <input type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar">
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Invoice#
                                </label>
                                <div class="col-md-10">
                                    <input type="text" id="txt_invoice" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Customer#
                                </label>
                                <div class="col-md-10">
                                    <input type="text" id="txt_cus" readonly class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Bil No
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="txt_bilno" readonly class="form-control" />
                                </div>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Bill Date
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="txt_bildat" readonly class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Currency
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="txt_cur" readonly class="form-control" />
                                </div>
                                <label class="control-label col-md-2" style="text-align:left;" />
                                Rate
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="txt_rat" readonly class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Remarks
                                </label>
                                <div class="col-md-10">
                                    <input type="text" id="txt_rmk" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Item
                                </label>
                                <div class="col-md-10 ">
                                    <input type="text" id="txt_itm" style="width:100%;" />
                                </div>
                            </div>
                            <div class="form-group">

                                <label class="control-label col-md-2" style="text-align:left;">
                                    Bill Qty
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="txt_bilqty" readonly class="form-control" />
                                </div>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Amount
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="txt_damt" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Rate
                                </label>
                                <div class="col-md-4">
                                    <input type="text" id="txt_rate" class="form-control" />
                                </div>
                                <label class="control-label col-md-2" style="text-align:left;">
                                    Return Qty
                                </label>
                                <div class="col-md-3">
                                    <input type="number" id="txt_rtnqty" class="form-control" value="0"
                                        placeholder="0" />
                                </div>
                                <div class="col-md-1">
                                    <input id="btn_showdetail" type="button" value="Add" onclick="AddRecord();"
                                        class="btn btn-primary" />
                                </div>
                            </div>

                        </div>



                        <div class="col-md-12">
                            <div style="overflow-x:scroll">
                                <table id="detailsTable" class="table table-striped table-bordered">
                                    <thead style="text-align:center">
                                        <tr>
                                            <th>Action</th>

                                            <th style="display: none;">Item</th>
                                            <th>Item</th>
                                            <th style="display: none;">Warehouseid</th>
                                            <th>Warehouse</th>
                                            <th>Bill Qty</th>
                                            <th>Qty</th>
                                            <th>Rate</th>
                                            <th>Amount</th>
                                            <th>GST%</th>
                                            <th>GST</th>
                                            <th>Net Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>

                            </div>

                            <div class="form-group">
                                <div class="col-md-6"></div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-4" style="text-align:left;">
                                            Amount
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" id="txt_amt" value="0" readonly class="form-control"
                                                placeholder="0.00" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-4" style="text-align:left;">
                                            Discount
                                        </label>
                                        <div class="col-md-3">
                                            <input type="text" id="txt_disper" value="0" class="form-control" value="0"
                                                placeholder="0.00" onchange="calculationMaster()" />
                                        </div>
                                        <div class="col-md-5">
                                            <input type="text" id="txt_disamt" value="0" class="form-control"
                                                placeholder="0.00" onchange="calculationMaster()" />
                                        </div>
                                    </div>
                                   
                                    <div class="form-group">
                                        <label class="control-label col-md-4" style="text-align:left;">
                                            Net Amount
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" id="txt_netamt" readonly class="form-control" value="0"
                                                placeholder="0.00" />
                                        </div>
                                    </div>



                                </div>
                            </div>

                        </div>

                    </div>

                    <div class="modal-footer">
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
@* Create Modal End *@


<script src="~/FunctionJS/Sales/Transaction/CreditNote.js?@Guid.NewGuid().ToString("n")"></script>